{
  "features": {
    "edit_prediction_provider": "zed"
  },

  "language_models": {
    "ollama": {
      "available_models": [
        {
          "name": "qwen2.5-coder:7b",
          "max_tokens": 32000,
          "supports_tools": true,
          "supports_thinking": false,
          "supports_images": true
        }
      ]
    }
  },

  "agent": {
    "use_modifier_to_send": true,
    "inline_assistant_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:7b"
    },
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:7b"
    },
    "commit_message_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:7b"
    },
    "default_profile": "write",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true
  },

  "project_panel": {
    "auto_fold_dirs": false
  },

  "buffer_line_height": "comfortable",
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },

  "terminal": {
    "alternate_scroll": "on",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 480,
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_family": "RecMonoCasual Nerd Font",
    "font_features": null,
    "font_size": 16,
    "option_as_meta": false,
    "line_height": "comfortable",
    "button": true,
    //"shell": {
    //  "program": "/opt/homebrew/bin/ghostty"
    //},
    "toolbar": {
      "breadcrumbs": true
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": null
    }
  },

  "edit_predictions": {
    "mode": "eager",
    "enabled_in_text_threads": true
  },

  "theme": "One Dark",
  "ui_font_family": "RecMonoCasual Nerd Font",
  "ui_font_size": 16,
  "buffer_font_family": "RecMonoCasual Nerd Font",
  "buffer_font_size": 16,
  "relative_line_numbers": true,

  "tabs": {
    "git_status": true,
    "activate_on_close": "history",
    "file_icons": true,
    "show_close_button": "always",
    "close_position": "right",
    "show_diagnostics": "all"
  },

  "search": {
    "regex": true
  },

  "inlay_hints": {
    "enabled": false
  },

  "file_finder": {
    "file_icons": true,
    "modal_max_width": "xlarge",
    "git_status": true
  },

  "vim_mode": true,

  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },

  "soft_wrap": "editor_width",
  "preferred_line_length": 80,

  "wrap_guides": [80],
  "show_wrap_guides": true,

  "languages": {
    "JavaScript": {
      "tab_size": 4
    },

    "Go": {
      "language_servers": ["gopls"]
    },

    "Markdown": {
      "format_on_save": "on",
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}", "--tab-width", "4"]
        }
      }
    },

    "Make": {
      "hard_tabs": true
    },

    "Templ": {
      "format_on_save": "off"
    }
  },

  "experimental.theme_overrides": {
    "background.appearance": "transparent",
    "background": "#000000AF",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.active_background": "#00000000",
    "tab.inactive_background": "#00000000",
    "status_bar.background": "#00000000",
    "title_bar.background": "#00000000",
    "panel.background": "#00000000",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000",
    "editor.active_line.background": "#00000000"
  }
}
